<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8CD5E"
    tools:context=".Page2_action">

    <Button
        android:id="@+id/feed_button"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="611dp"
        android:layout_marginEnd="314dp"
        android:layout_marginBottom="94dp"
        android:text="feed_me"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="151dp"
        android:layout_height="63dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="517dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="182dp"
        android:text="lets_play"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bath_button"
        android:layout_width="164dp"
        android:layout_height="65dp"
        android:layout_marginStart="298dp"
        android:layout_marginTop="611dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="86dp"
        android:text="bath_me"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <TextView
        android:id="@+id/pet_action_text"
        android:layout_width="237dp"
        android:layout_height="115dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="310dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/petimages"
        android:layout_width="304dp"
        android:layout_height="207dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="461dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/welcomephoto" />

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>